{
  "name": "grade-tracker",
  "version": "1.0.0",
  "main": "server/server.js",
  "type": "module",
  "scripts": {
    "build": "node build.js",
    "build:force": "vite build",
    "serve": "node server/server.js",
    "dev": "node build.js && node server/server.js",
    "dev:test": "node build.js && node --env-file=.env.test server/server.js",
    "test": "node --env-file=.env.jest --experimental-vm-modules node_modules/jest/bin/jest.js",
    "cypress:open": "node build.js && start-server-and-test 'node --env-file=.env.cypress server/server.js' 3001 'npx cypress open --e2e'",
    "cypress:run": "node build.js && start-server-and-test 'node --env-file=.env.cypress server/server.js' 3001 'npx cypress run --e2e'"
  },
  "dependencies": {
    "@apollo/server": "^4.11.3",
    "bcrypt": "^5.1.1",
    "better-sqlite3": "^11.9.1",
    "dotenv": "^16.4.7",
    "express": "^4.18.3",
    "express-prom-bundle": "^8.0.0",
    "express-session": "^1.18.0",
    "graphql": "^16.10.0",
    "lodash": "^4.17.21",
    "prom-client": "^15.1.3",
    "svelte-routing": "^2.13.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.26.9",
    "@sveltejs/vite-plugin-svelte": "^3.0.0",
    "@tailwindcss/container-queries": "^0.1.1",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "autoprefixer": "^10.4.20",
    "babel-jest": "^29.7.0",
    "bits-ui": "^0.22.0",
    "clsx": "^2.1.1",
    "cmdk-sv": "^0.0.19",
    "cypress": "^14.2.1",
    "jest": "^29.7.0",
    "lucide-svelte": "^0.484.0",
    "start-server-and-test": "^2.0.11",
    "supertest": "^7.1.0",
    "svelte": "^4.2.0",
    "svelte-sonner": "^0.3.28",
    "tailwind-merge": "^3.0.2",
    "tailwind-variants": "^1.0.0",
    "tailwindcss": "^3.4.17",
    "vite": "^5.0.0"
  }
}
